@model WebUI.Models.HomeIndexViewModel

@{
    ViewBag.Title = "Home";
}


@Html.Action("Menu", "Nav", new { selectedLink = "Home" })


<!--Slider area -->
<div class="slider-area">
    <div class="zigzag-bottom"></div>
    <div id="slide-list" class="carousel carousel-fade slide" data-ride="carousel">

        <div class="slide-bulletz">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="carousel-indicators slide-indicators">
                            <li data-target="#slide-list" data-slide-to="0" class="active"></li>
                            <li data-target="#slide-list" data-slide-to="1"></li>
                            <li data-target="#slide-list" data-slide-to="2"></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="single-slide">
                    <div class="slide-bg slide-one"></div>
                    <div class="slide-text-wrapper">
                        <div class="slide-text">
                            <div class="container">
                                <div class="row ">
                                    <div class="col-md-6 col-md-offset-6">
                                        <div class="slide-content">
                                            <h2>About mMusic+</h2>
                                            <p>What is music to you? Whether it is a hobby, career or passion, you will find everything you are looking for here on the MUSIC STORE webshop! </p>
                                            <p>For more than 40 years we have utilised our enthusiasm for musical performance and creation to help us build a company that offers a wealth of instruments and equipment. From Guitar Amplifiers to Digital Audio Workstations, Stage Pianos to Complete PA Systems, we offer more than 55,000 items on our online store, in stock and ready for shipping.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="single-slide">
                    <div class="slide-bg slide-two"></div>
                    <div class="slide-text-wrapper">
                        <div class="slide-text">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-6">
                                        <div class="slide-content">
                                            <h2>Online Catalogue</h2>
                                            <p>We offer not only an international print catalogue (500 pages) with Euro prices... but also an English online catalogue with Pound prices. A catalogue gives you a much quicker overview than any online shop.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="single-slide">
                    <div class="slide-bg slide-three"></div>
                    <div class="slide-text-wrapper">
                        <div class="slide-text">
                            <div class="container">
                                <div class="row justify-content-start">
                                    <div class="col-md-6 col-md-offset-6">
                                        <div class="slide-content">
                                            <h2>Always the lowest prices</h2>
                                            <p>Our self-developed price tool compares up to 200,000 prices per day. No one is able to beat our prices while also having such a huge range of products in stock ready to ship.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div> <!-- End slider area -->
<!--Promo area -->
<div class="promo-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="single-promo">
                    <i class="fa fa-refresh"></i>
                    <p>30 Days return</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo">
                    <i class="fa fa-truck"></i>
                    <p>Free shipping</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo">
                    <i class="fa fa-lock"></i>
                    <p>Secure payments</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="single-promo">
                    <i class="fa fa-gift"></i>
                    <p>New products</p>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End promo area -->
<!--Main content area -->
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        @foreach (var p in Model.AllProducts)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    @if (p.ImageData != null)
                                    {
                                        <img class="img-thumbnail" src="@Url.Action("GetImage", "Shop",
                                                new { p.ProductId })" />
                                    }

                                    <div class="product-hover">
                                        <a href="@Url.Action("AddToCart", "Cart", new { p.ProductId})" class="add-to-cart-link">
                                            <i class="fa fa-shopping-cart"></i>
                                            Add to cart
                                        </a>

                                        <a href="@Url.Action("SingleProductInfo", "Shop", new {category = p.Category, id = p.ProductId })"
                                           class="view-details-link">
                                            <i class="fa fa-link"></i>
                                            See details
                                        </a>
                                    </div>
                                </div>

                                <h2>@Html.ActionLink(p.Name, "SingleProductInfo", "Shop", new { category = p.Category, id = p.ProductId }, null)</h2>

                                <div class="product-carousel-price">
                                    <ins>@p.Price$</ins> <del>10000$</del>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->
<!--Brands area -->
<div class="brands-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="brand-wrapper">
                    <h2 class="section-title">Brands</h2>
                    <div class="brand-list">
                        <img src="~/images/services_logo__1.jpg" alt="">
                        <img src="~/images/services_logo__2.jpg" alt="">
                        <img src="~/images/services_logo__3.jpg" alt="">
                        <img src="~/images/services_logo__4.jpg" alt="">
                        <img src="~/images/services_logo__1.jpg" alt="">
                        <img src="~/images/services_logo__2.jpg" alt="">
                        <img src="~/images/services_logo__3.jpg" alt="">
                        <img src="~/images/services_logo__4.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End brands area -->
<!--Product widget area -->
<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Top Sellers</h2>
                    @Html.ActionLink("View All", "ProductList", "Shop", null, new { @class = "wid-view-more" })

                    @foreach (var p in Model.SellersProducts)
                    {
                        <div class="single-wid-product">
                            <a href="@Url.Action("SingleProductInfo", "Shop", new { category = p.Category, id = p.ProductId })">
                                @if (p.ImageData != null)
                                {
                                    <img class="product-thumb" src="@Url.Action("GetImage", "Shop",
                                            new { p.ProductId })" />
                                }
                            </a>
                            <h2>@Html.ActionLink(p.Name, "SingleProductInfo", "Shop", new { category = p.Category, id = p.ProductId }, null)</h2>
                            <div class="product-wid-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product-wid-price">
                                <ins>@p.Price</ins> <del>$1425.00</del>
                            </div>
                        </div>
                    }

                </div>
            </div>

            <div class="col-md-6">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Top New</h2>
                    @Html.ActionLink("View All", "ProductList", "Shop", null, new { @class = "wid-view-more" })


                    @foreach (var p in Model.NewestProducts)
                    {
                        <div class="single-wid-product">
                            <a href="@Url.Action("SingleProductInfo", "Shop", new { category = p.Category, id = p.ProductId })">
                                @if (p.ImageData != null)
                                {
                                    <img class="product-thumb" src="@Url.Action("GetImage", "Shop",
                                            new { p.ProductId })" />
                                }
                            </a>
                            <h2>@Html.ActionLink(p.Name, "SingleProductInfo", "Shop", new { category = p.Category, id = p.ProductId }, null)</h2>
                            <div class="product-wid-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product-wid-price">
                                <ins>@p.Price</ins> <del>$1925.00</del>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> <!-- End product widget area -->
