@model Domain.Entities.RegisterModel

@{
    ViewBag.Title = "Register";
}

<link href="~/Content/ErrorStyles.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@Html.Action("Menu", "Nav", new { selectedLink = "Register" })


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Register</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "login-form-wrap" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="username"> Name * </label>
                    @Html.TextBoxFor(x => x.Name, new { id = "username", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>

                <div class="form-group">
                    <label for="email"> Email * </label>
                    @Html.TextBoxFor(x => x.Email, new { id = "email", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <div class="form-group">
                    <label for="password"> Password * </label>
                    @Html.TextBoxFor(x => x.Password, new { type = "password", id = "password", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>

                <div class="form-group">
                    <label for="password"> Confirm password * </label>
                    @Html.TextBoxFor(x => x.PasswordConfirm, new { type = "password", id = "password", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>

                <p class="form-group">
                    <input type="submit" value="Register" class="btn btn-default">
                </p>
            }
        </div>
    </div>
</div>
