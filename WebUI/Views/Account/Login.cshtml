@model Domain.Entities.LoginModel

@{
    ViewBag.Title = "Login";
}

<link href="~/Content/ErrorStyles.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@Html.Action("Menu", "Nav", new { selectedLink = "Log in" })


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Login</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form-wrap" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />


                <div class="form-group">
                    <label for="username"> Name or Email * </label>
                    @Html.TextBoxFor(x => x.NameOrEmail, new { id = "username", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.NameOrEmail)
                </div>

                <div class="form-group">
                    <label for="password"> Password * </label>
                    @Html.TextBoxFor(x => x.Password, new { type = "password", id = "password", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>

                <p class="form-group">
                    <input type="submit" value="Login" class="btn btn-default">
                </p>
                <p>
                    <a href="#">Lost your password?</a>
                </p>
            }
        </div>
    </div>
</div>

